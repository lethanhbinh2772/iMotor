<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="250dp" />


    <EditText
        android:id="@+id/edt_phone_typein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_medium"
        android:padding="@dimen/margin_vertical_small"
        android:background="@drawable/edt_phone_bg"
        android:drawableLeft="@drawable/ic_cell_phone"
        android:hint="@string/phone_typein"
        android:textColor="@color/textColorGrey"
        android:textSize="@dimen/text_huge"
        android:textStyle="bold"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal_medium"
        android:layout_marginTop="@dimen/margin_vertical_huge"
        android:background="@drawable/btn_login"
        android:text="@string/login"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/text_medium"/>

</LinearLayout>